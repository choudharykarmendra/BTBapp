<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mehakmeet.btbapp.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/backupmain">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="20sp"
        android:padding="20dp"
        android:hint="Enter Place of Departure"
        android:textAlignment="center"
        android:id="@+id/departure"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="109dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="20dp"
        android:hint="Enter Destination"
        android:id="@+id/destination"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button"
        android:background="?android:attr/fingerprintAuthDrawable"
        android:onClick="clicked_bus_search"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/destination"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
